{
  "branches": [
    "main"
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          {
            "type": "feat",
            "release": "minor"
          },
          {
            "type": "fix",
            "release": "patch"
          },
          {
            "type": "perf",
            "release": "patch"
          },
          {
            "type": "revert",
            "release": "patch"
          },
          {
            "type": "docs",
            "scope": "README",
            "release": "patch"
          },
          {
            "type": "style",
            "release": false
          },
          {
            "type": "refactor",
            "release": false
          },
          {
            "type": "test",
            "release": false
          },
          {
            "type": "build",
            "release": false
          },
          {
            "type": "ci",
            "release": false
          },
          {
            "type": "chore",
            "release": false
          }
        ],
        "parserOpts": {
          "noteKeywords": [
            "BREAKING CHANGE",
            "BREAKING CHANGES"
          ]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": "üöÄ Features"
            },
            {
              "type": "fix",
              "section": "üêõ Bug Fixes"
            },
            {
              "type": "perf",
              "section": "‚ö° Performance Improvements"
            },
            {
              "type": "revert",
              "section": "üîÑ Reverts"
            },
            {
              "type": "docs",
              "section": "üìö Documentation",
              "hidden": false
            },
            {
              "type": "style",
              "section": "üíé Styles",
              "hidden": true
            },
            {
              "type": "chore",
              "section": "üîß Miscellaneous Chores",
              "hidden": true
            },
            {
              "type": "refactor",
              "section": "üì¶ Code Refactoring",
              "hidden": true
            },
            {
              "type": "test",
              "section": "üß™ Tests",
              "hidden": true
            },
            {
              "type": "build",
              "section": "üõ† Builds",
              "hidden": true
            },
            {
              "type": "ci",
              "section": "‚öôÔ∏è Continuous Integrations",
              "hidden": true
            }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    "@semantic-release/npm",
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "package.json",
          "pnpm-lock.yaml"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist/**/*",
            "label": "Distribution files"
          }
        ]
      }
    ]
  ]
}